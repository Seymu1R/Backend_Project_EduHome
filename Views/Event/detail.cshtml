 @model EventViewModel
@{
    Event eventitem = Model.Event;
    List<Category> categories = Model.Categories;
    var speakerEvents = Model.Event.SpeakerEvents;
}
       <!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>event / details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Event Details Start -->
<div class="event-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="event-details">
                    <div class="event-details-img">
                        <img src="~/admin/assets/img/event/@eventitem.ImageUrl" alt="event-details">
                        <div class="event-date">
                            <h3>@eventitem.StartTime</span></h3>
                        </div>
                    </div>
                    <div class="event-details-content">
                        <h2>@eventitem.Title</h2>
                        <ul>
                            <li><span>time : </span>@eventitem.Duration</li>
                            <li><span>venue : </span>@eventitem.Location</li>
                        </ul>
                        <p> @eventitem.Content </p>
                       
                        <div class="speakers-area fix">
                            <h4>speakers</h4>
                            @foreach (var item in speakerEvents)
                            {
                                <div class="single-speaker">
                                <div class="speaker-img">
                                        <img src="~/admin/assets/img/speaker/@item.Speaker?.ImageUrl alt="speaker">
                                </div>
                                <div class="speaker-name">
                                    <h5>@item.Speaker?.FullName</h5>
                                    <p>@item.Speaker?.Position </p>
                                </div>
                               </div>
                            }
                            
                           
                        </div>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" action="http://demo.devitems.com/eduhome/mail.php" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" name="name" id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                    <p>Massage</p>
                                    <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                        <ul>
                            @foreach (var item in categories)
                            {
                                <li><a asp-action="categorydetail" asp-route-id="@item.Id" >@item.Name</a></li>
                            }
                           
                           
                        </ul>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a href="blog-details.html" id="blog"><img src="~/assets/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>
                    @await Component.InvokeAsync("LastPostSide")
                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                            <a href="blog-details.html" class="mr-10 mb-10">course</a>
                            <a href="blog-details.html" class="mr-10 mb-10">education</a>
                            <a href="blog-details.html" class="mb-10">teachers</a>
                            <a href="blog-details.html" class="mr-10">learning</a>
                            <a href="blog-details.html" class="mr-10">university</a>
                            <a href="blog-details.html">events</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Event Details End -->
@await Component.InvokeAsync("Subscribe");
