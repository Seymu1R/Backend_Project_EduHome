@model LeaveMessageModelView
<div class="col-md-7 col-sm-7 col-xs-12">
    <div class="reply-area">
        <h3>LEAVE A message</h3>
        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
        <form id="contact-form" asp-action="SendMessage"  method="post">
            <div class="row">
                <div class="col-md-12">
                    <p>Name</p>
                    <input  asp-for="Name"  name="name" id="name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="col-md-12">
                    <p>Email</p>
                    <input asp-for="Email" type="text" name="email" id="email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="col-md-12">
                    <p>Subject</p>
                    <input asp-for="Subject" name="subject" id="subject">
                    <span class="text-danger" asp-validation-for="Subject"></span>
                    <p>Massage</p>
                    <textarea  asp-for="Message" name="message" id="message" cols="15" rows="10"></textarea>
                    <span class="text-danger" asp-validation-for="Message"></span>
                </div>
            </div>
            <button  class="reply-btn" type="submit"  data-text="send"><span>send message</span></button>
            
        </form>
