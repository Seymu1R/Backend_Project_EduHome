@model List<SpeakerEvent>
<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"> EduHomeEdit /</span> SpeakeEvent Tables</h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">
            <h5 class="card-header">SpeakerEvent Table<a asp-action="create" class=" btn btn-danger mx-5 "> Create SpeakerEvent </a></h5>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Event</th>
                            <th>Speaker</th>                            

                        </tr>
                    </thead>
                    @foreach (var speakerevent in Model)
                    {
                        <tbody class="table-border-bottom-0">
                            <tr>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@speakerevent.Event.Title</strong></td>
                                <td>@speakerevent.Speaker.FullName</td>
                                

                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">

                                            <a type="submit" class="dropdown-item" asp-action="Edit" asp-route-id="@speakerevent.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>

                                            <form method="post" asp-action="Delete">
                                                <button type="submit" asp-action="Delete" asp-route-id="@speakerevent.Id" class="dropdown-item"><i class="bx bx-trash me-1"></i> Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        </tbody>
                    }

                </table>
            </div>
        </div>
        <!--/ Basic Bootstrap Table -->


    </div>
    <!-- / Content -->
    <!-- Footer -->



</div>
<!-- Content wrapper -->