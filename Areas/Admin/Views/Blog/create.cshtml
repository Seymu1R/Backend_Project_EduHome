@using EduHomeProject.Areas.Admin.Models.Blog;
@model CreateBlogViewModel;
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"> EduHomeEdit /</span> Course Tables <span> /Create </span></h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Course Tables</h5>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form method="post" asp-action="Create" enctype="multipart/form-data">
                        <div>
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title"
                                   class="form-control"
                                   id="defaultFormControlInput"
                                   placeholder="Title"
                                   aria-describedby="defaultFormControlHelp" />
                            <span class="text-danger" asp-validation-for="Title"></span>

                        </div>
                        <div>
                            <label asp-for="Content" class="form-label">Content</label>
                            <input asp-for="Content"
                                   class="form-control"
                                   id="defaultFormControlInput"
                                   placeholder="Content"
                                   aria-describedby="defaultFormControlHelp" />
                            <span class="text-danger" asp-validation-for="Content"></span>

                        </div>
                        
                        <div>
                            <label asp-for="Image" class="form-label">Image</label>
                            <input asp-for="Image"
                                   class="form-control"
                                   id="defaultFormControlInput"
                                   placeholder="Image"
                                   aria-describedby="defaultFormControlHelp" />
                            <span class="text-danger" asp-validation-for="Image"></span>

                        </div>
                        <div>
                            <label asp-for="CategoryId" class="form-label">Categories</label>
                            <select asp-for="CategoryId"
                                    asp-items="@Model?.CategoryList"
                                    class="form-control"
                                    id="defaultFormControlInput"
                                    aria-describedby="defaultFormControlHelp"></select>
                            <span class="text-danger" asp-validation-for="CategoryId"></span>

                        </div>


                        <button type="submit" class="btn btn-success mt-5 "> Create  </button>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>