@model CreateSliderViewModel
<div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"> EduHomeEdit /</span> Slider Tables <span> /Create </span></h4>
<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <h5 class="card-header">Default</h5>
            <div class="card-body">
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form method="post" asp-action="Create" enctype="multipart/form-data">
                   <div>
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title"
                           class="form-control"
                           id="defaultFormControlInput"
                           placeholder="Title"
                           aria-describedby="defaultFormControlHelp" />
                      <span  class="text-danger" asp-validation-for="Title"></span>
                   
                   </div>
                    <div>
                        <label asp-for="Subtitle" class="form-label">Subtitle</label>
                        <input asp-for="Subtitle"
                               class="form-control"
                               id="defaultFormControlInput"
                               placeholder="Subtitle"
                               aria-describedby="defaultFormControlHelp" />
                         <span class ="text-danger" asp-validation-for="Subtitle"></span>
                    </div>
                        <div>
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description"
                                      class="form-control"
                                      id="defaultFormControlInput"
                                      placeholder="Subtitle"
                                      aria-describedby="defaultFormControlHelp"
                                      >@Model.Description </textarea>
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>
                    <div>
                        <label asp-for="Image" class="form-label">Image</label>
                        <input asp-for="Image"
                               class="form-control"
                               id="defaultFormControlInput"
                               placeholder="Image"
                               aria-describedby="defaultFormControlHelp" />
                         <span class="text-danger" asp-validation-for="Image"></span>

                    </div>
                    <button class="btn btn-success mt-5 " > Create  </button>
                </form>
               
            </div>
        </div>
    </div>
    
    </div>
</div>
